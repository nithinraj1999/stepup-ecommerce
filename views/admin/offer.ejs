<script>
  function addOffer(event){
   
       const offerPercentage  = document.getElementById("offerPercentage").value.trim()
       const offerName = document.getElementById("offerName").value.trim()
       const Percentage = document.getElementById("offerPercentage").value.trim()
       const startDate = document.getElementById("startDate").value.trim()
       const  endDate = document.getElementById("endDate").value.trim()
                
       const nameRegex = /^(?!\s)(?!.*\s$)(?!.*\s\s)[A-Za-z0-9 ]+$/;
       const percentageRegex = /^\d+$/;
       if (!nameRegex.test(offerName)) {
         return 
       }

       if (!percentageRegex.test(offerPercentage)) {
     
       return 
       }

       if (startDate === "" || endDate === "" || offerName ==="") {
      
      return 
       }
       if(offerPercentage >100 ){
         return 
    }

    event.preventDefault();
        data = {
                offerName : offerName,
                offerPercentage : Percentage,
                startDate : startDate,
                endDate : endDate,
            }

        axios.post("/admin/add-offer", data)
  .then(response => {
    console.log(response.data);
    if (response.data.success) {
      var form = document.getElementById('addOfferForm');
      Swal.fire({
        icon: 'success',
        title: 'Offer Added!',
        text: 'The offer has been added successfully.',
      }).then(() => {
        form.reset();
        window.location.reload();
      });
    }
    if (response.data.alreadyExist) {
      Swal.fire({
        icon: 'error',
        title: 'Offer Already Exists!',
        text: 'The offer you are trying to add already exists.',
      });
    }
  })
  .catch(error => {
    console.error(error);
  });


 }




 //===================== delete Offer ====================

 function deleteOffer(offerId) {
  // Show sweet alert confirmation before deleting
  Swal.fire({
    title: 'Are you sure?',
    text: 'You won\'t be able to revert this!',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#3085d6',
    cancelButtonColor: '#d33',
    confirmButtonText: 'Yes, delete it!'
  }).then((result) => {
    if (result.isConfirmed) {
      const data = {
        offerId: offerId
      };
      axios.post("/admin/delete-offer", data)
        .then(response => {
          Swal.fire(
            'Deleted!',
            'Your file has been deleted.',
            'success'
          ).then(() => {
            window.location.reload();
          });
          console.log(response.data);
        })
        .catch(error => {
          Swal.fire(
            'Error!',
            'An error occurred while deleting the offer.',
            'error'
          );
          console.error(error);
        });
    }
  });
}









function editOfferload(offerId) {
  // Make an Axios request to fetch offer details

  axios.get(`/admin/load-edit-offer/?offerid=${offerId}`)
 
    .then(response => {
      const offer = response.data.offer;
      console.log(response.data);
      // Populate modal fields with offer data
      document.getElementById('offerName2').value = offer.name;
      document.getElementById('offerPercentage2').value = offer.percentage;
      document.getElementById('startDate2').value = offer.startDate;
      document.getElementById('endDate2').value = offer.endDate;
      document.getElementById('offerId').value = offer._id;

      // Show the modal
      $('#editOfferModal').modal('show');
    })
    .catch(error => {
      console.error('Error fetching offer:', error);
    });
}



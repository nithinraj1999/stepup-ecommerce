<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Confirm New Password</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            width: 50%;
            margin: 100px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        }
        h2 {
            text-align: center;
        }
        form {
            margin-top: 20px;
            text-align: center;
        }
        input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }
        input[type="submit"] {
            padding: 10px 20px;
            border: none;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        input[type="submit"]:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Confirm New Password</h2>
      
            <input type="password" name="new_password" placeholder="Enter your new password" id="new_password"  required>
            <br>
            <input type="password" name="confirm_password" placeholder="Confirm your new password" id="confirm_password" required>
            <br>
            <input type="hidden" id="hidden" value="<%=userId %>">
            <input type="submit" onclick="resetPassword(event)" value="Confirm Password">
       
    </div>

<script>
    function resetPassword(event){
      
        const newPassword = document.getElementById("new_password").value
        const confirmPassword = document.getElementById("confirm_password").value
        const userId = document.getElementById("hidden").value
        
        const data = {
            newPassword:newPassword,
            confirmPassword:confirmPassword,
            userId:userId
        }
        axios.post("/reset",data)
        .then(response=>{
            console.log(response.data);
            window.location.reload()
        })
        .catch(error=>{
            console.error(error);
        })
    }
</script>

    
</body>
</html>
